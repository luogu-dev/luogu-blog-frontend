<?xml version='1.0' encoding='utf8' ?>
<section id="config">
  <section id="background" name="背景设置">
    <property id="header" name="顶部背景" type="url"/>
  </section>
  <section id="color" name="颜色设定">
    <property id="primary" name="主色" type="color-choice">
      <option id="deep-purple" name="大牛紫" color="#673AB7" />
      <option id="indigo" name="洛谷蓝" color="#3F51B5" default="true"/>
      <option id="teal" name="头部挂件绿" color="#009688" />
    </property>
    <property id="accent" name="强调色" type="color-choice">
      <option id="pink" name="咖啡厅粉" color="#FF4081" default="true"/>
      <option id="red" name="卡速米红" color="#FF5252" />
      <option id="orange" name="奇迹橙" color="#FFAB40" />
    </property>
  </section>
  <property id="show_icon" name="显示头像" type="boolean" required="true" default="true" />
</section>
